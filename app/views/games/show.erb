<h1><%= @game.name %> <%= @rating %></h1>

<ul>
  <% @activities.each do |activity| %>
    <% if activity.game_rating %>
      <h2><%= activity.game_rating %></h2>
    <% end %>
    <% if activity.type == 'composite' %>
      <h2><a href="/users/<%= slug(activity.username) %>"><%= activity.username %></a> played <%= activity.game_name %></h2>
      <p><%= activity.post_content %></p>
    <% elsif activity.type == 'played' %>
      <h2><a href="/users/<%= slug(activity.username) %>"><%= activity.username %></a> played <%= activity.game_name %></h2>
    <% elsif activity.type == 'post' %>
      <h2><a href="/users/<%= slug(activity.username) %>"><%= activity.username %></a> posted @<%= activity.game_name %></h2>
      <p><%= activity.post_content %></p>
    <% else %>
      <h2><a href="/users/<%= slug(activity.username) %>"><%= activity.username %></a> rated <%= activity.game_name %><h2>
    <% end %>
  <% end %>
</ul>

<% if session[:user_id] %>
  <form method="get" action='<%= slug(@game.name) %>/new'>
    <button type="submit">Make a Post</button>
  </form>
<% end %>