<form method="post" action="./">
  <label for="name">Name of Game: </label>
  <input type="text" name="game[name]" id="name" value="<%= @game.name %>" disabled>

  <label for="rating">Rating: </label>
  <input type="number" name="rating" id="rating" min="0.0" max="10.0" step="0.1">

  <label for="post">Create Post: </label>
  <textarea name="post[content]" id="post"></textarea>

  <input type="submit" value="Add Game">
</form>