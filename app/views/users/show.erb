<%= @user.username %>

<ul>
  <% @user.games.each do |game| %>
    <h3><li><%= game.name %></li></h3>
    <% @posts.find_all { |post| post.game_id == game.id }.each do |post| %>
      <p><%= post.content %></p>
    <% end %>
  <% end %>
</ul>

<% if @user.id == session[:user_id] %>
  <form method="get" action='<%= slug(@user.username) %>/new'>
    <button type="submit">Make a Post</button>
  </form>
<% end %>