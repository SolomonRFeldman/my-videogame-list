<form method="post" action="./">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name of Game: </label>
  <input type="text" name="game[name]" id="name" value="<%= @activity.game_name %>" disabled>
  <input type="hidden" name="activity[user_games.id]" value="<%= activity.user_game_id %>">

  <label for="rating">Rating: </label>
  <input type="number" name="rating" id="rating" min="0.0" max="10.0" step="0.1" value="<%= @activity.game_rating %>">
  <input type="hidden" name="activity[ratings.id]" value="<%= activity.rating_id %>">

  <label for="post">Create Post: </label>
  <textarea name="post[content]" id="post"><%= @activity.post_content %></textarea>
  <input type="hidden" name="activity[posts.id]" value="<%= activity.post_id %>">

  <input type="submit" value="Add Game">
</form>