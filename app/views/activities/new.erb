<form class="ml-3 mt-4" method="post" action="/activities">
  <div class="form-row">
    <div class="form-row">
      <label for="rating" class="col-form-label">Rating</label>
      <div class="col col-auto">
        <input type="number" class="form-control" name="activity[rating]" id="rating" min="0.0" max="10.0" step="0.1">
      </div>
    </div>

    <div class="form-row ml-2">
      <label for="name" class="col-form-label">Name of Game</label>
      <div class="col col-auto">
        <% if params[:game_name] %>
          <input type="text" class="form-control" name="game[name]" id="name" value="<%= params[:game_name] %>" disabled>
        <% else %>
          <input type="text" class="form-control" name="game[name]" id="name">
        <% end %>
        <%= '<small id="loginerror" class="form-text text-danger">Can\'t leave blank</small>' if params && params[:emptygame] == "true" %>
      </div>
    </div>

  </div>

  <div class="form-group mt-2">
    <label for="post" class="col-form-label">Create Post:</label>
    <div class="col col-auto w-25">
      <textarea class="form-control" rows="3" name="activity[post_content]" id="post"></textarea>
    </div>
  </div>

  <div class="col col-auto">
    <input type="submit" class="btn btn-primary" value="Submit">
  </div>
    
</form>