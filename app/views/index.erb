<ul>
  <% @activities.each do |activity| %>
    <% if activity.game_rating %>
      <h2><%= activity.game_rating %></h2>
    <% end %>
    <% if activity.type == 'composite' %>
      <h2><%= activity.username %> played <%= activity.game_name %></h2>
      <p><%= activity.post_content %></p>
    <% elsif activity.type == 'played' %>
      <h2><%= activity.username %> played <%= activity.game_name %></h2>
    <% elsif activity.type == 'post' %>
      <h2><%= activity.username %> posted @<%= activity.game_name %></h2>
      <p><%= activity.post_content %></p>
    <% else %>
      <h2><%= activity.username %> rated <%= activity.game_name %><h2>
    <% end %>
  <% end %>
</ul>
<% if @current_user %>
  <form method="get" action='users/<%= slug(@current_user.username) %>/new'>
    <button type="submit">Make a Post</button>
  </form>
<% end %>